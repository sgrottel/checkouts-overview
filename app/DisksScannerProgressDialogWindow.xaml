<Window x:Class="SG.Checkouts_Overview.DisksScannerProgressDialogWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SG.Checkouts_Overview"
		mc:Ignorable="d"
		Title="Checkouts Overview - Scan Disks..." Height="150" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Label Name="StatusText" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Initializing...</Label>

		<Grid Grid.Row="1" Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
			<Grid Margin="8">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>
				<Button Name="AbortButton" Grid.Column="1" Padding="8,2" Margin="4" Click="AbortButton_Click">Abort</Button>
			</Grid>
		</Grid>
	</Grid>
</Window>
